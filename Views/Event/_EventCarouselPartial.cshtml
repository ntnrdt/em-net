@model List<MeetApp.Data.Entities.Event>

<div id="carousel" class="carousel slide mb-5" data-ride="carousel">
  <ol class="carousel-indicators">
    @for(var i = 0; i < Model.Count; i ++)
    {
        <li data-target="#carousel" data-slide-to="@i" class='@(i == 0 ? "active" : "")'></li>
    }
  </ol>
  <div class="carousel-inner">
    @for(var i = 0; i < Model.Count; i ++)
    {
        <div class='carousel-item @(i == 0 ? "active" : "")'>
            <div class="bg" style="background: url(@Model[i].ImageUrl)" title="@Model[i].Title"></div>
            <div class="carousel-caption d-none d-md-block">
                <h5>@Model[i].Title</h5>
                <p>@Model[i].Date.ToString()</p>
            </div>
        </div>
    }
  </div>
  <a class="carousel-control-prev" href="#carousel" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carousel" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>