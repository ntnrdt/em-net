@model List<MeetApp.Data.Entities.Event>

<div id="carousel" class="carousel slide mb-5" data-ride="carousel">
  <ol class="carousel-indicators">

      @if(Model.Count > 0)
      {
          for(var i = 0; i < Model.Count; i ++)
          {
              <li data-target="#carousel" data-slide-to="@i" class='@(i == 0 ? "active" : "")'></li>
          }
      }
      else
      {
        <li data-target="#carousel" data-slide-to="0" class="active"></li>
        <li data-target="#carousel" data-slide-to="1"></li>
        <li data-target="#carousel" data-slide-to="2"></li>
      }
  </ol>
  <div class="carousel-inner">
      @if(Model.Count > 0)
      {
            for(var i = 0; i < Model.Count; i ++)
            {
                <div class='carousel-item @(i == 0 ? "active" : "")'>
                    <div class="bg" style="background: url(@Model[i].ImageUrl)" title="@Model[i].Title"></div>
                    <div class="carousel-caption d-none d-md-block">
                        <h5>@Model[i].Title</h5>
                        <p>@Model[i].Date.ToString()</p>
                    </div>
                </div>
            }
      }
      else
      {
        <div class="carousel-item active">
            <img class="d-block w-100" src="https://i.picsum.photos/id/1018/800/300.jpg" alt="First slide">
            <div class="carousel-caption d-none d-md-block">
                <h5>Upcoming Event</h5>
                @{
                    var eventDate = DateTime.Now.ToString();
                }
                <p>@eventDate</p>
            </div>
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="https://i.picsum.photos/id/1037/800/300.jpg" alt="Second slide">
            <div class="carousel-caption d-none d-md-block">
                <h5>Upcoming Event</h5>
                @{
                    eventDate = DateTime.Now.AddDays(1).ToString();
                }
                <p>@eventDate</p>
            </div>
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="https://i.picsum.photos/id/1043/800/300.jpg" alt="Third slide">
            <div class="carousel-caption d-none d-md-block">
                <h5>Upcoming Event</h5>
                @{
                    eventDate = DateTime.Now.AddDays(2).ToString();
                }
                <p>@eventDate</p>
            </div>
        </div>
      }
  </div>
  <a class="carousel-control-prev" href="#carousel" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carousel" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>