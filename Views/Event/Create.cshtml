@using MeetApp.Data.Entities;

@model Event
@{
    ViewData["Title"] = "Create Event";
}

<div>
    <h4>Event - Create</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Title">Title</label>
                    <input asp-for="Title" class="form-control" placeholder="Enter Title">
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Date">Event Date</label>
                    <input asp-for="Date" class="form-control">
                    <span asp-validation-for="Date" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Price">Price</label>
                    <input asp-for="Price" type="number" class="form-control">
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ImageUrl">ImageUrl</label>
                    <input asp-for="ImageUrl" class="form-control">
                </div>
                <div class="form-group">
                    <label asp-for="Address">Address</label>
                    <input asp-for="Address" class="form-control" placeholder="Address of event..." />
                </div>
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="City">City</label>
                        <input asp-for="City" class="form-control" placeholder="City..." />
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Country">Country</label>
                        <input asp-for="Country" class="form-control" placeholder="Country..." />
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="OnlineUrl">Online Url</label>
                    <input asp-for="OnlineUrl" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Description">Description</label>
                    <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                </div>
                <button type="submit" class="btn btn-success">Create</button>
                <a asp-action="Index" class="btn btn-danger">Cancel</a>
            </form>
        </div>
    </div>
</div>