@using MeetApp.Data.Entities;

@{
    var listOfMemes = new List<Event>()
        {
            new MeetApp.Data.Entities.Event
            {
                Title = "Happy Hour",
                Description = "Well, it gotta be virtual...",
                ImageUrl = "/img/no-events-tea.jpeg"
            },new MeetApp.Data.Entities.Event
            {
                Title = "Marathon",
                Description = "A Netflix Marathon of course...",
                ImageUrl = "/img/no-events-movie.jpg"
            },
            new MeetApp.Data.Entities.Event
            {
                Title = "Bye Bye Summer",
                Description = "Watch your beach body fading away...",
                ImageUrl = "/img/no-events.jpeg"
            }
    };

    ViewBag.HideDetailsButton = true;
}

<div class="jumbotron text-center">
    <h1>You have no Upcoming Events :(</h1>
    <p>Below are some ideas for you.</p>
</div>

<div class="row">
    @foreach (var item in listOfMemes)
    {
        <div class="col-md-4 mb-4">
            <partial name="_EventCardPartial" model="@item"/>
        </div>
    }
</div>

<div class="row">
    <div class="col-md-6 offset-md-3 text-center">
        <a asp-action="Create" class="btn btn-primary">New Event</a>
    </div>
</div>